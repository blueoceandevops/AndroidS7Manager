<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_cell_bg"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:orientation="horizontal">

   <ImageView
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:layout_marginEnd="7dp"
       android:layout_marginTop="8dp"
       android:layout_marginBottom="8dp"
       android:background="@drawable/ic_automate"
       android:contentDescription="Automate image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="10dp">

        <TextView
            android:text="Automate sort info"
            android:id="@+id/tv_rv_user_automate_main"
            android:textSize="18sp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Automate info"
            android:textSize="13sp"
            android:id="@+id/tv_rv_user_automate_second"
            android:lines="1"
            android:textStyle="italic"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>